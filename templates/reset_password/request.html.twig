{% extends 'base.html.twig' %}

{% block title %}Réinitialisez votre mot de passe{% endblock %}

{% block body %}

    <div class="container-fluid">

        {# Affichage des messages flashs de type "reset_password_error" si il y en a #}
        {% for flashError in app.flashes('reset_password_error') %}
            <div class="alert alert-danger" role="alert">{{ flashError }}</div>
        {% endfor %}

        {# Titre h1 #}
        <div class="row">
            <h1 class="col-12 text-center my-5">Réinitialisez votre mot de passe</h1>
        </div>

        {# Formulaire de demande de reset de mot de passe #}
        <div class="row">
            <div class="col-12 col-md-4 offset-md-4">

                {# Ouverture du formulaire request #}
                {{ form_start(requestForm) }}

                    {# Champ email #}
                    {{ form_row(requestForm.email) }}
                    <div>
                        <small>
                            Entrez votre adresse e-mail et nous vous enverrons un lien pour réinitialiser votre mot de passe.
                        </small>
                    </div>

                    {# Bouton de validation #}
                    <button class="btn btn-secondary">Envoyer la réinitialisation du mot de passe</button>

                {# Fermeture du formulaire request #}
                {{ form_end(requestForm) }}

            </div>
        </div>
    </div>
{% endblock %}

