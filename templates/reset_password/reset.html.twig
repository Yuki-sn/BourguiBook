{% extends 'base.html.twig' %}

{% block title %}Réinitialisez votre mot de passe{% endblock %}

{% block body %}

<div class="container-fluid">
    {# Titre h1 #}
    <div class="row">
        <h1 class="col-12 text-center my-5">Réinitialisez votre mot de passe</h1>
    </div>
    {# Formulaire de réinitialisation #}
    <div class="row">
        <div class="col-12 col-md-4 offset-md-4">

            {# Ouverture du formulaire de reset#}
            {{ form_start(resetForm) }}

                {# Champ mot de passe #}
                {{ form_row(resetForm.plainPassword) }}

                {# Bouton de validation #}
                <button class="btn btn-secondary">Réinitialisez votre mot de passe</button>

            {# Fermeture du formulaire de reset#}
            {{ form_end(resetForm) }}

        </div>
    </div>
</div>
{% endblock %}

{# Fichiers CSS individuels de la page #}
{% block stylesheets %}

{% endblock %}
